@model X.PagedList.IPagedList<Request_Course.Models.T_Admin>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">ادمین</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                       <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                            <form class="form-inline">
                                <div class="form-group">
                                    <input type="text" name="search" class="search-text form-control" placeholder="Search..." />
                                </div>
                                <button type="submit" class="btn btn-info">جستوجو</button>
                            </form>
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="نام کاربری: activate to sort column descending">
                                                @Html.ActionLink("نام کاربری", "Admins",new {sortOrder="username"})
                                            </th>

                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="شماره: activate to sort column ascending">
                                                @Html.ActionLink("شماره", "Admins",new {sortOrder="phone"})
                                            </th>
                                              <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="شماره: activate to sort column ascending">
                                                @Html.ActionLink("نام", "Admins",new {sortOrder="name"})
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.UserName</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Name</td>
                                                    <td class="btn btn-warning" ><a asp-controller="Admin" asp-action="UpdateAdmin" asp-route-username="@item.UserName">ویرایش</a></td>
                                                    <td class="btn btn-danger" ><a asp-controller="Admin" asp-action="RmoveAdmin"  asp-route-username="@item.UserName">حذف</a> </td>
                                                </tr>
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div><div class="row">
                            <div class="col-sm-5">
                            </div>

                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                </div>
                                @Html.PagedListPager(Model, page => Url.Action("Admins", new { pageid=page }))

                            </div>
                        </div>
                    </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>
 




