@model X.PagedList.IPagedList<Request_Course.Models.T_Modaresan>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

@{
    Layout = "~/Views/Shared/_LayoutIntialing.cshtml";
}
<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>علی Ran فرم اساتید</title>
</head>

<div class="content-wrapper">

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">مدرسان</h3>
                    </div>
                    <!-- /.box-header -->
                    <form class="form-inline">
                        <div class="form-group">
                            <input type="text" name="q" value="@ViewBag.searchQuery" class="search-text form-control" placeholder="Search..." />
                        </div>
                        <button type="submit" class="btn btn-info">جستوجو</button>
                    </form>
                    <div class="box-body">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="نام کاربری: activate to sort column descending">
                                                    @Html.ActionLink("نام کاربری", "ModaresanTest",new {sortOrder="nameFamily"})
                                                </th>

                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="شماره: activate to sort column ascending">
                                                    @Html.ActionLink("شماره", "ModaresanTest",new {sortOrder="Phone"})
                                                </th>
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="ایمیل: activate to sort column ascending">
                                                    @Html.ActionLink("ایمیل", "ModaresanTest",new {sortOrder="Email"})
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.NameFamily</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Email</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div><div class="row">
                                <div class="col-sm-5">
                                </div>

                                <div class="col-sm-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                        @if (ViewBag.pagecount >= 1)
                                        {
                                            <ul class="pagination">
                                                @for (int i = 0; i < ViewBag.pagecount + 1; i++)
                                                {
                                                    @if (ViewBag.pageid == i + 1)
                                                    {
                                                        <li class="paginate_button active">
                                                            <a asp-controller="Admin" asp-action="Modaresan" asp-route-pageId="@(i+1)" aria-controls="example2" data-dt-idx="0" tabindex="0">@(i+1)</a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li class="paginate_button ">
                                                            <a asp-controller="Admin" asp-action="Modaresan" asp-route-pageId="@(i+1)" aria-controls="example2" data-dt-idx="0" tabindex="0">@(i+1)</a>
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        }
                                    </div>
                                      @Html.PagedListPager(Model, page => Url.Action("ModaresanTest", new { pageid=page }))
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
  
</div>

