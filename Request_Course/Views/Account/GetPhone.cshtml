@model Request_Course.VM.ActivationVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetPhone</title>
</head>
<body>

    <h4>ActivationVM</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="GetPhone" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameFamily" class="control-label"></label>
                    <input asp-for="NameFamily" class="form-control" />
                    <span asp-validation-for="NameFamily" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="radio" id="Teacher" name="Persontype" value="Teacher">
                    <label for="html">Teacher</label><br>
                    <input type="radio" id="student" name="Persontype" value="Student">
                    <label for="css">Student</label><br>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
    </html>
