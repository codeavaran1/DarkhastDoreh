@model Request_Course.VM.RequesterVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RequestForm</title>
</head>
<body>

<h4>RequesterVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name_Sherkat" class="control-label"></label>
                <input asp-for="Name_Sherkat" class="form-control" />
                <span asp-validation-for="Name_Sherkat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label  class="control-label"> Ostan</label>
                <select name="Ostan" class="form-control" asp-items="@ViewBag.Ostan"></select>
            </div>
             <div class="form-group">
                <label  class="control-label"> Semat</label>
                <select name="Semat" class="form-control" asp-items="@ViewBag.Semat"></select>
            </div>
            <input type="hidden" asp-for="Phone" value="@ViewBag.phone" data="@ViewBag.phones" /> 
            <input type="hidden" asp-for="Family" value="@ViewBag.family" data="@ViewBag.family" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
