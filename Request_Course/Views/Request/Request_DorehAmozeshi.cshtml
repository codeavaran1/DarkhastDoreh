                                    <label class="control-label"> سطح کیفی مدرس</label>
                                    <i class="fa fa-asterisk" style="color: #ff4d4d;font-size:9px;"></i>
                                </div>
                                <div class="col-md-10">
                                    <select name="SatheKeyfi_Modares" class="form-control" asp-items="@ViewBag.SatheKeyfi_Modares"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div>
                    <br />
                    <br />
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                        </div>

                        <div class="col-md-3">
                        </div>

                        <div class="col-md-3">

                            <button onclick="myFunction()" class="btn btn-success btn-block">ادامه و تکمیل اطلاعات</button>
                            <a asp-action="Request_New_DorehAmozeshi" asp-route-phone="@ViewBag.Phone " class="btn btn-primery btn-block">
                                    تعریف دوره جدید
                            </a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </section>












