@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
@model X.PagedList.IPagedList<Request_Course.Models.T_Doreh_Darkhasti>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<div>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">دوره فعال</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @if (Model.Count() == 0)
                        {
                            <h2>خالی است</h2>
                        }
                        else
                        {
                            <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                                <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                                    <form class="form-inline" style="margin:2%">
                                        <input type="hidden" value="@ViewBag.teacherid" data="@ViewBag.teacherid" name="teacherid" />
                                        <div class="form-group">
                                            <input type="text" name="search" class="search-text form-control" placeholder="Search..." />
                                        </div>
                                        <button type="submit" class="btn btn-info">جستوجو</button>
                                    </form>
                                    <div class="col-sm-12">
                                        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="نام کاربری: activate to sort column descending">
                                                        @Html.ActionLink("دوره", "DorehFaal",new {teacherid=@ViewBag.teacherid,sortOrder="Doreh"})
                                                    </th>

                                                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="شماره: activate to sort column ascending">
                                                        @Html.ActionLink("شرکت", "DorehFaal",new {teacherid=@ViewBag.teacherid,sortOrder="Mokhatb"})
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < Model.Count(); i++)
                                                {
                                                    <tr role="row" class="odd">
                                                        <td class="sorting_1">@ViewBag.OnvanDoreh[i]</td>
                                                        <td>@ViewBag.mokhatab[i]</td>
                                                        <td>
                                                            <a asp-action="GhabolDoreh" asp-route-Dorehid="@ViewBag.dorehId[i]" asp-route-teacherid="@ViewBag.teacherid">
                                                                قبول
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div><div class="row">
                                    <div class="col-sm-5">
                                    </div>

                                    <div class="col-sm-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                        </div>
                                        @Html.PagedListPager(Model, page => Url.Action("DorehFaal", new {teacherid=@ViewBag.teacherid, pageid=page }))

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>
