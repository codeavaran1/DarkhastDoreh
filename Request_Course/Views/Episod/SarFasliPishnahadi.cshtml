@model Request_Course.VM.SarFasl_PishnahadVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SarFasliPishnahadi</title>
</head>
<body>

    <h4>SarFasl_PishnahadVM</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SarFasliPishnahadi" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="DorehDarkhasti_ID" value="@ViewBag.DarkhastDoreh" data="@ViewBag.DarkhastDoreh" />
                   <input type="hidden" name="onvanasli" value="@ViewBag.onvanasli" data="@ViewBag.onvanasli" />
                <input type="hidden" name="onvandoreh" value="@ViewBag.onvandoreh" data="@ViewBag.onvandoreh" />
                @for (int i = 0; i < 2; i++)
                {
                    <div class="form-group">
                        <label class="control-label">Mohtava</label>
                        <input name="Mohtav" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Modate_Ejra</label>
                        <input name="Modate_Ejra" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label"> Shekle Ejra</label>
                        <select name="shekldoreh" class="form-control" asp-items="@ViewBag.Sheklejra"></select>
                    </div>
                    <br />
                }
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
    </html>
